<div class="mt-3 w-50 m-auto">
  <h1>My first form in ERB</h1>
  <ul class="list-group">
    <% @tasks.each do |task|%>
      <li class="list-group-item">
        <%= link_to task.title, task_path(task) %>
      </li>
    <%end%>
  </ul>
  <%= link_to "Add a new task", new_task_path , class: "btn btn-primary"%>
</div>
