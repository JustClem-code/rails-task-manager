<div class="mt-3 w-50 m-auto">
  <%= form_with model: @task do |f| %>
    <div>
      <%= f.label :title, class: "form-label"%>
      <%= f.text_field :title, class: "form-control" %>
      <%= f.label :details, class: "form-label"%>
      <%= f.text_field :details, class: "form-control" %>
      <%= f.label :completed, class: "form-check-label"%>
      <%= f.check_box :completed, class: "form-check-input mt-3" %>
    </div>
    <%= f.submit class: "btn btn-primary mt-3" %>
  <% end %>
</div>
