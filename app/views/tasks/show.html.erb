<div class="mt-3 w-50 m-auto">
  <div class="card m-auto" style="width: 18rem;">
    <div class="card-body">
      <h5 class="card-title"><%= @task.title %></h5>
      <p class="card-text"><%= @task.details %></p>
      <div class="form-check">
        <input class="form-check-input" type="checkbox" value="" id="defaultCheck1" <%= @task.completed ? "checked" : "" %>>
        <label class="form-check-label" for="defaultCheck1">
          Completed
        </label>
      </div>
      <%= link_to "Back to list", tasks_path, class: "card-link" %>
      <%= link_to edit_task_path do %>
        <i class="fa-regular fa-pen-to-square"></i>
      <% end %>
      <%= link_to task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do
%>
        <i class="fa-solid fa-trash"></i>
      <% end %>
    </div>
  </div>
</div>
